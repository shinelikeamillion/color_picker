{
  "name": "colorpicker",
  "version": "1.3",
  "icons":{
    "16":"icon16.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },
  "description": "pick a color on screen",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon48.png",
    "default_title": "Click and pick a color on screen"
  },
  "permissions": ["activeTab"],
  "manifest_version": 3
}
